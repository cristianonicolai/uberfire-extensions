<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:defaulteditor="urn:import:org.uberfire.ext.widgets.core.client.editors.defaulteditor">

  <ui:with field="i18n" type="org.uberfire.ext.widgets.core.client.resources.i18n.CoreConstants"/>

  <ui:style>
    .center {
      margin-top: 50px;
      text-align: center;
      height: 200px;
      width: 100%;
    }

    .topMargin {
      margin-top: 50px;
    }
  </ui:style>

  <g:ResizeLayoutPanel height="300px">
    <b:Column size="MD_4" styleName='{style.center}'>
      <b:Row>
        <b:Label text="{i18n.SelectFileToUpload}"/>
      </b:Row>
      <b:Row>
        <defaulteditor:DefaultEditorFileUpload ui:field="fileUpload"/>
      </b:Row>
      <b:Row styleName='{style.topMargin}'>
        <b:Button ui:field="downloadButton" text="{i18n.Download}"/>
      </b:Row>
    </b:Column>
  </g:ResizeLayoutPanel>

</ui:UiBinder>