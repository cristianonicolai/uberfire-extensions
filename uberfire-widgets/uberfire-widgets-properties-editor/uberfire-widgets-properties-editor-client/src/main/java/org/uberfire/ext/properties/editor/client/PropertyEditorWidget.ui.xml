<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .margin {
      margin-top: 8px;
      margin-bottom: 8px;
      margin-left: 15px;

    }

    .container {
      overflow-y: auto;
    }
  </ui:style>

  <g:HTMLPanel>
    <g:HTMLPanel ui:field="filterPanel" addStyleNames="{style.margin}">
      <b:TextBox ui:field="filterBox" placeholder="filter properties..."/>
      <b:ButtonGroup>
        <b:Tooltip title="Reload Property Editor">
          <b:Button icon="RETWEET" ui:field="reload"/>
        </b:Tooltip>
      </b:ButtonGroup>
    </g:HTMLPanel>

    <b:PanelGroup ui:field='propertyMenu' addStyleNames="{style.container}"/>

  </g:HTMLPanel>
</ui:UiBinder>